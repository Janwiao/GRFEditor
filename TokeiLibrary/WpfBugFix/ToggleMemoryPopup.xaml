<styles:TkWindow x:Class="TokeiLibrary.WpfBugFix.ToggleMemoryPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:styles="clr-namespace:TokeiLibrary.WPF.Styles"
             xmlns:wpfBugFix="clr-namespace:TokeiLibrary.WpfBugFix"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" SizeToContent="WidthAndHeight" Foreground="{DynamicResource TextForeground}" >
    <wpfBugFix:UnclickableBorder x:Name="_unclickableBorder" Focusable="False" BorderThickness="1" BorderBrush="{DynamicResource ToggleMemoryBorderBrush}" FocusVisualStyle="{x:Null}" Background="{DynamicResource ToggleMemoryBackgroundBrush}">
        <Grid Name="_gridSearchContent" Margin="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Label VerticalAlignment="Center" Grid.Row="1" Name="_label" Margin="1" HorizontalAlignment="Center"/>
        </Grid>
    </wpfBugFix:UnclickableBorder>
</styles:TkWindow>
