<UserControl x:Class="TokeiLibrary.WPF.Styles.TabHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Styles="clr-namespace:TokeiLibrary.WPF.Styles" mc:Ignorable="d" >
    <StackPanel>
        <Styles:Header x:Name="_header" Text="{Binding Path=Header, RelativeSource={RelativeSource AncestorType={x:Type TabItem}}}" />
        <Styles:HeaderSeparator />
    </StackPanel>
</UserControl>
